{
  "name": "@newcodedevelopment/ui",
  "private": false,
  "version": "0.0.1",
  "main": "./dist/@newcodedevelopment/ui.umd.js",
  "module": "./dist/@newcodedevelopment/ui.es.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "NewCode",
    "email": "burak@newcodedevelopment.be",
    "url": "https://newcode.be"
  },
  "exports": {
    ".": {
      "import": "./dist/@newcodedevelopment/ui.es.js",
      "require": "./dist/@newcodedevelopment/ui.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "engines": {
    "node": ">=16.18.1"
  },
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,mdx}\"",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\""
  },
  "dependencies": {
    "framer-motion": "^10.12.10",
    "next": "^13.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.4.3",
    "tailwind-merge": "^1.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.1.4",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "json": "^11.0.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-dts": "^2.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier -w"
    ]
  }
}
